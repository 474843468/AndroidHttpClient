<resources>

   Base application theme.
  <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowEnableSplitTouch">false</item>
    <item name="android:splitMotionEvents">false</item>
  </style>

  <style name="AppTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  <!-- <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">-->
  <!-- <item name="android:windowNoTitle">true</item>-->
  <!-- <item name="android:windowActionBar">false</item>-->
  <!--<item name="colorPrimary">@color/colorPrimary</item>-->
  <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
  <!--<item name="colorAccent">@color/colorAccent</item>-->
  <!--<item name="android:windowEnableSplitTouch">false</item>-->关闭多点触控
  <!--<item name="android:splitMotionEvents">false</item>-->定义布局是否传递触摸事件（touch）到子布局，true表示传递给子布局，false表示不传递。
  <!--4 </style>-->
  <style name="TextAppearance.ExpandedTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textSize">22sp</item>
  </style>

  <style name="FindBillTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="textAllCaps">false</item>
  </style>

  <style name="AutoWrapTv" parent="AutoWrap">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/selector_btn_accent</item>
    <item name="android:layout_margin">5dp</item>
    <item name="android:onClick">onClick</item>
    <item name="android:padding">10dp</item>
  </style>
  <style name="MatchWrapTv" parent="MatchWrap">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/selector_btn_accent</item>
    <item name="android:layout_margin">5dp</item>
    <item name="android:onClick">onClick</item>
    <item name="android:padding">10dp</item>
  </style>

  <style name="welcome_page">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:paddingTop">100dp</item>
    <item name="android:paddingBottom">30dp</item>
    <item name="android:clipToPadding">false</item>
  </style>

  <style name="text_title">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">20dp</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:fontFamily">sans-serif-light</item>
  </style>

  <style name="text_subtitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">15dp</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginLeft">30dp</item>
    <item name="android:layout_marginRight">30dp</item>
    <item name="android:fontFamily">sans-serif-thin</item>
  </style>

  <style name="SwitchButtonStyle">
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentRight">true</item>
  </style>


  <!--红色基本标题栏-->
  <style name="titlebar_base_red">
    <item name="iconLeft">@drawable/boc_back_white</item>
    <item name="titleColor">@color/boc_titlebar_text_white</item>
    <item name="barBackground">@color/boc_titlebar_bg_red</item>
  </style>

  <!--红色通用标题栏-->
  <style name="titlebar_common_red" parent="titlebar_base_red">
    <item name="iconRight">@drawable/boc_more_white</item>
  </style>

  <!--白色基本标题栏-->
  <style name="titlebar_base_white">
    <item name="iconLeft">@drawable/boc_back_black</item>
    <item name="titleColor">@color/boc_titlebar_text_black</item>
    <item name="barBackground">@color/boc_titlebar_bg_white</item>
  </style>

  <!--白色标题栏-->
  <style name="titlebar_common_white"  parent="titlebar_base_white">
    <item name="iconRight">@drawable/boc_more_black</item>
  </style>

  <!--透明背景标题栏-->
  <style name="titlebar_common_transparent">
    <item name="iconLeft">@drawable/boc_back_black</item>
    <item name="titleColor">@color/boc_titlebar_text_black</item>
    <item name="barBackground">@android:color/transparent</item>
  </style>
</resources>
